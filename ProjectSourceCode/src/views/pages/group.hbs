<style>
    .box {
        padding-top: 2vh;
        padding-bottom: 2vh;
        padding-right: 3vw;
        padding-left: 3vw;
        backdrop-filter: blur(35px);
        background: rgba(12, 12, 12, 0.4);
        box-shadow: 0px 0px 15px rgba(6, 6, 6, 0.35);
        border-radius: 20px;
        margin-top: 5vh;
        margin-bottom: 5vh;
    }

    .sectionHeader {
        margin-bottom: 2vh;
        display: flex;
        justify-content: space-between;
        align-items: center;
        column-gap: 1vw;
    }
</style>

{{> nav}}

<div class="container">
    <!--Group Name & Admin-->
    <div class="sectionHeader" style="margin-top: 5vh;">
        <h3><span style="color: #00FF94">{{group.group_name}}</span></h3>
        <h3>Group Admin: <span style="color: #00FF94">{{group.group_admin_username}}</span></h3>
    </div>
    <!-- End Group Name & Admin -->

    <!-- Group Members & Outstanding Balances -->
    <div class="box">
        <div class="row">
                <div class="sectionHeader">
                    <h3>Group Members & Outstanding Balances: </h3>
                </div>
            </div>
            <div class="row">
                {{#each groupMembers}}
                <div class="col-2">
                    <h3>{{this.username}}</h3>
                </div>
                <div class="col-2">
                    <h3>${{this.outstanding_balance}}</h3>
                </div>
                {{/each}}
            </div>

        
    </div>
<!-- End Group Members & Outstanding Balances -->

<!--Transaction history-->
    <div class="box">
        <div class="row">
            <div class="row align-items-center">
                <div class="sectionHeader">
                    <h3>Transaction History</h3>
                </div>
            </div>
        </div>
        <div class="row">
            {{#if transactions.length}}
                <table class="table">
                    <tbody>
                        {{#each transactions}}
                            <tr>
                                <th>Charge: ${{this.charge_amount}}</th>
                                <td>{{this.date}}</td>
                                <td>{{this.charge_name}}</td>
                                <td>Requested by: {{this.requester_username}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <h3>No transactions to display</h3>
            {{/if}}
        </div>
    </div>
    <!--End Transaction history-->

</div>
